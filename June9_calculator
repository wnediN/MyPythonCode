number1 = input("enter: ")
num1 = int(number1)
number2 = input("enter: ")
num2 = int(number2)
sign = input("sign: ")

if(sign == '+'):
    print(num1+num2)
elif(sign == '-'):
    print(num1-num2)
elif(sign == '*'):
    print(num1*num2)
elif(sign == '/'):
    print(num1/num2)
